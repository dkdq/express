{{#extends "base"}}
{{#block "content"}}
<h1>Delete Note</h1>
<form method="POST">
<div class="alert alert-danger">
    Are you sure you want to delete this note?
    <div class="card">
        <div class="card-body">
            {{note.comment}}
        </div>
    </div>
    <div class="mt-3">
        <input type="submit" class="btn btn-primary" value="OK">
        <a href="/" class="btn btn-success">Cancel</a>
    </div>
</div>
</form>
{{/block}}
{{/extends}}